package arrays;
import java.util.Scanner;
public class a1q1 {
		private static Scanner s;

		public static void main(String[] args)
		{
			int arr[]= {5,6,7,8,2,34};
			int len = arr.length;
			System.out.print("default array is:");
			for(int i=0;i<len;i++)
			{
				System.out.print(" "+arr[i]);
			}
			System.out.println("\nthe size of array is :"+len);
			s = new Scanner(System.in);
			System.out.println("enter the position of number you want to enter");
			int n = s.nextInt();
			if(n<=len){
			System.out.println("enter the value of element");
			int ele=s.nextInt();
			arr[n-1]=ele;
			System.out.println("input elemets is:"+ele);
			for(int i=0;i<len;i++)
			{
				System.out.print(" "+arr[i]);
			}
			}
			else
				System.out.print("input is greater than size of arra");
		

		}

}
